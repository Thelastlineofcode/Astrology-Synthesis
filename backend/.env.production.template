# Production Environment Configuration Template
# Use this when upgrading from SQLite to PostgreSQL
# Copy to backend/.env.production and update values

ENVIRONMENT=production

# Database - PostgreSQL for production
DB_DRIVER=postgresql
DB_HOST=your_postgres_host
DB_PORT=5432
DB_USER=your_postgres_user
DB_PASSWORD=your_secure_password_here
DB_NAME=astrology_synthesis_prod

# SQLite (not used in production, but keep configured for backwards compatibility)
SQLITE_DB_PATH=./astrology_synthesis.db

# Redis (upgrade to real Redis in production)
REDIS_HOST=your_redis_host
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password

# Security (change these for production!)
SECRET_KEY=use-strong-random-secret-key-at-least-32-characters-long
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ENABLE_API_KEY_AUTH=true

# CORS (restrict to your frontend domain)
CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
CORS_CREDENTIALS=true

# API
MAX_PREDICTION_WINDOW_DAYS=365
DEFAULT_PREDICTION_WINDOW_DAYS=30

# Rate Limiting (enable for production)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD_SECONDS=60

# Caching
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600

# Logging
LOG_LEVEL=WARNING
DEBUG=false
