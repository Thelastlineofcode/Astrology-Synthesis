# Phase 5 Environment Configuration
# Copy this to .env and fill in your actual values

# Perplexity API Configuration
PERPLEXITY_API_KEY=your-api-key-here
PERPLEXITY_MODEL=sonar-small
PERPLEXITY_BASE_URL=https://api.perplexity.ai

# Budget Settings
MONTHLY_BUDGET=5.0  # dollars
COST_ALERT_THRESHOLD=0.80  # alert when 80% of budget used

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0
CACHE_TTL=2592000  # 30 days in seconds

# FAISS Vector Store
FAISS_INDEX_PATH=./vector_store
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
FAISS_INDEX_TYPE=IndexFlatL2

# LLM Parameters
TEMPERATURE=0.7
TOP_P=0.9
MAX_TOKENS=1024
TIMEOUT=30

# Strategy Configuration
STRATEGY=auto  # auto, llm, kb, or template
FALLBACK_ENABLED=true
CACHE_ENABLED=true

# Performance Settings
BATCH_SIZE=10
NUM_WORKERS=4
PERFORMANCE_LOG=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
